<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    >



    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:text="" />
    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="15pt"
        android:textColor="#000"
        android:text="수룡이의 우편함"
        android:gravity="center_horizontal" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="#C7CAF7"
            android:text="" />
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="170dp"
            android:layout_height="180dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/homesuryong" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="170dp"
            android:text=""
            android:background="@drawable/white_background"/>


        <!--Recyclerview-->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/home_keyword_list"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="220dp"
            android:layout_marginRight="20dp"
            android:scrollbars="horizontal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12pt"
            android:textColor="#000"
            android:layout_marginLeft="195dp"
            android:layout_marginTop="60dp"
            android:text="새로운 공지사항" />
        <TextView
            android:id="@+id/unread_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12pt"
            android:textColor="#000"
            android:layout_marginLeft="310dp"
            android:layout_marginTop="100dp"
            android:text="00" />
        <TextView
            android:id="@+id/gun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12pt"
            android:textColor="#000"
            android:layout_marginLeft="350dp"
            android:layout_marginTop="100dp"
            android:text="건" />
        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10pt"
            android:textColor="#000"
            android:layout_marginTop="185dp"
            android:layout_marginLeft="22dp"
            android:text="키워드" />

        <Button
            android:id="@+id/my_keyword_list_plus_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="330dp"
            android:layout_marginTop="180dp"
            android:background="@android:color/transparent"
            android:gravity="right"
            android:text="+"
            android:textColor="#3B4CF6"
            android:textSize="18dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="185dp"
            android:layout_marginTop="280dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:layout_marginTop="-10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="0"
                    android:gravity="start"
                    android:text="공지사항"
                    android:textColor="#000"
                    android:textSize="10pt" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/check_keyword_post_btn"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="6dp"
                    android:background="@android:color/transparent"
                    android:text="+"
                    android:textColor="#3B4CF6"
                    android:textSize="18dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="145dp"
                android:orientation="horizontal">

                <ListView
                    android:id="@+id/home_post_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="470dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="30dp"
                android:text="바로가기"
                android:textColor="#000"
                android:textSize="10pt" />

            <LinearLayout
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/portal_shortcut"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="50dp"
                    android:background="@drawable/home_btn_shortcuts"
                    android:scaleType="fitCenter"
                    android:src="@drawable/homeicon" />

                <ImageButton
                    android:id="@+id/edu_sys_shortcut"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="50dp"
                    android:background="@drawable/home_btn_shortcuts"
                    android:scaleType="fitCenter"
                    android:src="@drawable/homeicon" />

                <ImageButton
                    android:id="@+id/sungshin_main_shortcut"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="50dp"
                    android:background="@drawable/home_btn_shortcuts"
                    android:scaleType="fitCenter"
                    android:src="@drawable/homeicon" />

                <ImageButton
                    android:id="@+id/major_shortcut"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/home_btn_shortcuts"
                    android:scaleType="fitCenter"
                    android:src="@drawable/homeicon" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="410dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="25dp"
                    android:text="성신여대 포탈"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:text="교육시스템"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="학과 홈페이지"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="학교홈페이지"
                    android:textColor="@color/black"/>
            </LinearLayout>

        </LinearLayout>

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNavigationView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            app:itemIconTint="#000000"
            app:itemTextColor="#000000"
            app:labelVisibilityMode="labeled"
            android:layout_gravity="bottom"
            app:menu="@menu/bottom_navigation_bar" />

    </FrameLayout>
</LinearLayout>