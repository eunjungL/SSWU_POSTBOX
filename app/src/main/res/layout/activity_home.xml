<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:text="" />
    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="15pt"
        android:textColor="#000"
        android:text="수룡이의 우편함"
        android:gravity="center_horizontal" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="#C7CAF7"
            android:text="" />
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="170dp"
            android:layout_height="200dp"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/homesuryong" />
        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="180dp"
            android:text=""
            android:background="@drawable/white_background"/>

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scrollbars="none" >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="236dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button3"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_marginHorizontal="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/home_btn_background"
                    android:text="Button"
                    android:textSize="6pt" />
                <Button
                    android:id="@+id/button4"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/home_btn_background"
                    android:text="Button"
                    android:textSize="6pt" />
                <Button
                    android:id="@+id/button7"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/home_btn_background"
                    android:text="Button"
                    android:textSize="6pt" />
                <Button
                    android:id="@+id/button5"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/home_btn_background"
                    android:text="Button"
                    android:textSize="6pt" />
                <Button
                    android:id="@+id/button6"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/home_btn_background"
                    android:text="Button"
                    android:textSize="6pt" />
            </LinearLayout>
        </HorizontalScrollView>
        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12pt"
            android:textColor="#000"
            android:layout_marginLeft="195dp"
            android:layout_marginTop="60dp"
            android:text="새로운 공지사항" />
        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12pt"
            android:textColor="#000"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="100dp"
            android:text="00 건" />
        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10pt"
            android:textColor="#000"
            android:layout_marginTop="196dp"
            android:layout_marginLeft="30dp"
            android:text="키워드" />
        <Button
            android:id="@+id/my_keyword_list_plus_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@android:color/transparent"
            android:gravity="right"
            android:text="+"
            android:layout_marginTop="190dp"
            android:layout_marginLeft="330dp"
            android:textColor="#3B4CF6"
            android:textSize="18dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_marginTop="300dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10pt"
                android:textColor="#000"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="30dp"
                android:text="공지사항"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:orientation="horizontal">
                <ListView
                    android:layout_width="250dp"
                    android:layout_height="140dp"
                    android:layout_marginLeft="20dp" />
                <ListView
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="right"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="470dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textSize="10pt"
                android:textColor="#000"
                android:layout_marginLeft="30dp"
                android:text="바로가기"/>

            <LinearLayout
                android:layout_width="353dp"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal">
                <ImageButton
                    android:id="@+id/button10"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="50dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/homeicon"
                    android:background="@drawable/home_btn_shortcuts" />
                <ImageButton
                    android:id="@+id/button11"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="50dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/homeicon"
                    android:background="@drawable/home_btn_shortcuts" />
                <ImageButton
                    android:id="@+id/button12"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="50dp"
                    android:background="@drawable/home_btn_shortcuts"
                    android:scaleType="fitCenter"
                    android:src="@drawable/homeicon"/>

                <ImageButton
                    android:id="@+id/button13"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/homeicon"
                    android:background="@drawable/home_btn_shortcuts" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="27dp"
                    android:text="성신여대 포탈" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="교육시스템" />

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="학과 홈페이지" />

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="TextView" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="10dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginBottom="0dp">
                <ImageButton
                    android:id="@+id/button2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/notification"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:text="Button" />
                <ImageButton
                    android:id="@+id/button9"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"

                    android:layout_weight="1"


                    android:layout_gravity="start"
                    />
                <ImageButton
                    android:id="@+id/button14"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"

                    android:layout_weight="1"

                    android:layout_gravity="start"
                    />
                <ImageButton
                    android:id="@+id/button15"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"

                    android:layout_weight="1"

                    android:layout_gravity="start"
                    />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>
